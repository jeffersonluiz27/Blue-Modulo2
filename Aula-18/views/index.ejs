<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <header>
    <h1>Filmes</h1>
    <nav><a href="/">Home</a><a href="/criar">Criar</a></nav>
  </header>
  <main>
    <div class="container">
      <% filmes.forEach(item=> { %>
        <div class="item">
          <h2>
            <%= item.nome %>
          </h2>
          <p>
            <%= item.descricao %>
          </p>
          <a href="/filmes/<%= item.id %>"><img src="<%= item.imagem %>" alt="capa do filme"></a>
        </div>
        <% }) %>
    </div>
  </main>
  <footer>
    <p>Lista de filmes - 2022</p>
  </footer>
  <script src="./JS/script.js"></script>
</body>

</html>